package {	import flash.display.*;	import flash.events.*;	import flash.geom.ColorTransform;	public class ColorfulCircle extends MovieClip	{		var speed:Number = 0;		public function ColorfulCircle()		{			speed = .01 + .02 * Math.random();			this.alpha = 0;			this.addEventListener(Event.ENTER_FRAME, FadeCircleOut);		}		private function FadeCircleOut(e:Event)		{			this.x -= 5;			//alpha += 0.01;			//this.scaleX +=  2 * speed;			//this.scaleY +=  2 * speed;			this.rotation += 20;			if (this.x < -100)			{				this.removeEventListener(Event.ENTER_FRAME, FadeCircleOut);				parent.removeChild(this);			}		}	}}