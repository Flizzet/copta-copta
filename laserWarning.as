package {	import flash.display.MovieClip;	import flash.events.*;	import fl.motion.Color;	import flash.events.TimerEvent;	public class laserWarning extends MovieClip	{		var goingUp:Boolean = false;		var goingDown:Boolean = false;		var above630:Boolean = false;		var below0:Boolean = false;		var fired:Boolean = false;				var colorFrameCounter:Number = 0;		public var frameCounter:Number = 0;		public function laserWarning()		{			this.addEventListener(Event.ENTER_FRAME, MoveWarningLaser);			above630 = true;		}		private function MoveWarningLaser(e:Event)		{						colorFrameCounter += 1;			if (colorFrameCounter == 7)			{				colorFrameCounter = 1;			}									if (colorFrameCounter == 6)			{				var col:Color = new Color();				col.setTint(Math.random()*0xFFFFFF, (4*.15));				transform.colorTransform = col;			}			if (currentFrame > 70)			{				fired = true;				this.dispatchEvent(new Event("above70"));			}			else			{				fired = false;			}						if (currentFrame == 70)			{				this.dispatchEvent(new Event("hit70"));			}			if (fired && above630)			{				y +=  10;			}			if (fired && below0)			{				y -=  10;			}			if (y > stage.stageHeight - 170)			{				above630Function();			}			else if (y < stage.stageHeight - 800)			{				below0Function();			}			if (above630)			{				y -=  10;			}			if (below0)			{				y +=  10;			}			function above630Function():void			{				above630 = true;				below0 = false;			}			function below0Function():void			{				above630 = false;				below0 = true;			}		}	}}